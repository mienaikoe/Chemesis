<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chemesis="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >


    <io.tangent.chemesis.views.TextViewPlus
        android:id="@+id/chemical_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/nist_purple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/remove_chemical"
        chemesis:typeface="KIRO"/>

    <io.tangent.chemesis.views.TextViewPlus
        android:id="@+id/chemical_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/dark_gray"
        android:layout_alignLeft="@+id/chemical_name"
        android:layout_toLeftOf="@+id/remove_chemical"
        android:layout_below="@+id/chemical_name"
        chemesis:typeface="KIRO"/>

</RelativeLayout>
